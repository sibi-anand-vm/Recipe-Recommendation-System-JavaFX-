<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project2.myrecipesController"
      prefHeight="580.0" prefWidth="360.0">
    <Label text="Recipe Recommendor" style="-fx-font-size: 25;" VBox.vgrow="NEVER" fx:id="welcomeText">
        <padding>
            <Insets top="10" right="0" bottom="10" left="30"/>
        </padding>
    </Label>
    <TableView fx:id="recipesTable">
        <columns>
            <TableColumn text="Name" fx:id="nameColumn"/>
            <TableColumn text="Region" fx:id="regionColumn"/>
            <TableColumn text="Type" fx:id="typeColumn"/>
            <TableColumn text="Taste" fx:id="tasteColumn"/>
        </columns>
    </TableView>
    <HBox xmlns:fx="http://javafx.com/fxml" spacing="5" alignment="CENTER_LEFT">
        <Label text="Click Here To Menu" style="-fx-font-size:16;">
            <padding>
                <Insets left="30" top="20"/>
            </padding> </Label>
        <Button text="Menu" onAction="#onmenuButtonClick" fx:id="loginButton" style="-fx-font-size: 12;" maxWidth="60" maxHeight="20" >
            <HBox.margin>
                <Insets top="20" />
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
