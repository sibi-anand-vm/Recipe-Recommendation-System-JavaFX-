<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project2.loginController"
      prefHeight="580.0" prefWidth="360.0">
    <Label text="Recipe Recommendor" style="-fx-font-size: 25;" VBox.vgrow="NEVER" fx:id="welcomeText">
        <padding>
            <Insets top="20" right="0" bottom="0" left="30"/>
        </padding>
    </Label>
    <Label text="Login" style="-fx-font-size: 24;" alignment="CENTER">
        <padding>
            <Insets top="15" right="20" bottom="20" left="20"/>
        </padding>
    </Label>
    <VBox spacing="5" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets left="30"/>
        </VBox.margin>
        <Label text="Usermail:" style="-fx-font-size:16;" />
        <TextField fx:id="usermailTextField" maxWidth="200"/>
    </VBox>
    <VBox spacing="5" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets left="30" bottom="25"/>
        </VBox.margin>
        <Label text="Password:" style="-fx-font-size:16;" />
        <TextField fx:id="passwordTextField" maxWidth="200">
            <padding>
                <Insets top="0" right="0" bottom="10" left="0"/>
            </padding> </TextField>
    </VBox>
    <VBox>
        <VBox.margin>
            <Insets left="30" />
        </VBox.margin>
        <Button text="Login" onAction="#onloginButtonClick" fx:id="signupButton" style="-fx-font-size: 16;" maxWidth="200" maxHeight="40" /> </VBox>
    <VBox>
        <VBox.margin>
            <Insets top="25" left="30"/>
        </VBox.margin><HBox xmlns:fx="http://javafx.com/fxml" spacing="5" alignment="CENTER_LEFT">

        <Label text="Doesn't have an account?" style="-fx-font-size:16;">
           </Label>
        <Button text="SignUp" onAction="#onSignUpButtonClick" fx:id="loginButton" style="-fx-font-size: 12;" maxWidth="60" maxHeight="20" />
    </HBox> </VBox>
</VBox>
