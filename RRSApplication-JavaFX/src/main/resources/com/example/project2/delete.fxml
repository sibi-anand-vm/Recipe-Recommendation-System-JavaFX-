<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project2.delController"
      prefHeight="580.0" prefWidth="360.0">
    <Label text="Recipe Recommendor" style="-fx-font-size: 30;" VBox.vgrow="NEVER" fx:id="welcomeText">
        <padding>
            <Insets top="20" right="0" bottom="0" left="30"/>
        </padding>
    </Label>
    <Label text="Delete Recipe" style="-fx-font-size: 24;" alignment="CENTER">
        <padding>
            <Insets top="15" right="20" bottom="20" left="20"/>
        </padding>
    </Label>
    <VBox spacing="5" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets left="30" bottom="25"/>
        </VBox.margin>
        <Label text="Recipe Name:" style="-fx-font-size:16;" />
        <TextField fx:id="recipenameTextField" maxWidth="200"/>
    </VBox>
    <VBox>
        <VBox.margin>
            <Insets left="30" />
        </VBox.margin>
        <Button text="Delete Recipe" onAction="#ondeleteButtonClick" fx:id="deleteButton" style="-fx-font-size: 16;" maxWidth="200" maxHeight="40" /> </VBox>
    <HBox xmlns:fx="http://javafx.com/fxml" spacing="5" alignment="CENTER_LEFT">
        <Label text="Click Here To Menu" style="-fx-font-size:16;">
            <padding>
                <Insets left="30" top="20"/>
            </padding> </Label>
        <Button text="Menu" onAction="#onmenuButtonClick" fx:id="menuButton" style="-fx-font-size: 12;" maxWidth="60" maxHeight="20" >
            <HBox.margin>
                <Insets top="20" />
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
